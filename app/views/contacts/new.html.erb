<div class="container">
  <div class="contact">
    <h1>Contact Me!</h1>
    <div class="skinny_wrapper wrapper_padding">
    <%= form_for @contact do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true %>

      <br>

      <%= f.label :email %><br>
      <%= f.email_field :email, required: true %>

      <br>

      <%= f.label :message %><br>
      <%= f.text_area :message, as: :text%>



     <%= f.submit 'Send Message', class: 'button' %>

    <% end %>
    </div>
  </div>
</div>
