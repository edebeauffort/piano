
  <div class="col-xs-12 contact">
    <h1>Contact Me!</h1>
    <div class="contact-form">
    <%= form_for @contact do |f| %>

      <%= f.text_field :name, placeholder: "your name", required: true %>
      <br>
      <%= f.email_field :email, placeholder: "your email", required: true %>
      <br>
      <%= f.text_area :message, placeholder: "What would you like to say...", rows: 5 ,as: :text%>
     <%= f.submit 'Send Message', class: 'button', id: 'btn-contact' %>
    <% end %>
    </div>
  </div>

